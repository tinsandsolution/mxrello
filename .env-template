# Django secret key
SECRET_KEY=your_secret_key_here

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings (if using something other than SQLite)
DATABASE_URL=postgres://user:password@localhost/dbname

# Email configuration (for password reset, etc.)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_email_password
# EMAIL_USE_TLS=True

# Allowed email domains for signup (comma-separated)
ALLOWED_EMAIL_DOMAINS=cobblestone.com

# Additional settings
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Static files settings
STATIC_URL=/static/
STATIC_ROOT=/path/to/static/root

# Media files settings
# MEDIA_URL=/media/
# MEDIA_ROOT=/path/to/media/root

# Third-party service API keys (if applicable)
# STRIPE_API_KEY=your_stripe_api_key
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key